  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.10.2",
    "@types/node-schedule": "^2.1.7",
    "concurrently": "9.1.0",
    "jest": "^29.7.0",
    "nodemon": "3.1.9",
    "prettier": "3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "5.7.2"
  },
  "nodemonConfig": {
    "delay": 50
